.ranking{
    background-color: rgba(25, 25, 25, 0.2);
    box-sizing: border-box;
    border-radius: 10rpx;
    padding: 10rpx 10rpx;
    margin-top: 20rpx;
    display: flex;
    justify-content: space-between;

}
.rank-left{
    flex: 2;
    display: flex;
    flex-flow: column;
    justify-content: space-evenly;
}
.left-top{
    font-size: 38rpx;
    font-weight: 700;
}
.song-item text{
    font-size: 28rpx;
    color:rgba(0 , 0, 0, 0.6);
    margin: 16rpx 0;
}



.rank-right{
    flex: 1;
    position: relative;
}
.rank-right image{
    width: 100%;
    vertical-align: bottom;
}
.right-playcount{
    position:absolute;
    right: 0;
    bottom: 0;
    color: #ccc;
    font-size: 26rpx;
    padding: 10rpx 10rpx;
    border-radius: 10rpx;
    background-color:  rgba(0,0,0,0.3);
}
