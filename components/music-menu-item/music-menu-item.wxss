.music-item{
    display: flex;
    margin: 10rpx 0;
}
.music-item .music-image{
    width: 28%;
}
.music-item .music-image image{
    width: 100%;
    border-radius: 20rpx;
}
.music-content{
    flex: 1;
    padding: 0 20rpx;
    display: flex;
    justify-content: space-between;

}
.information{
    position: relative;
    width: 100%;
    height: 100%;
}
.music-music-name,.music-music-author{
    position:absolute;
    top:50rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #888;
}
.music-music-author{
    display: block;
    top:110rpx;
    font-size: 26rpx;
}